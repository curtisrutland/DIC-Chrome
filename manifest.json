{
	"name": "Dream.In.Code",
	"version": "0.1",
	"manifest_version": 2,
	"description": "A simple tool for checking for new D.I.C. posts.",
	"icons": {
		"16": "img/icon16.png",
		"48": "img/icon48.png"
	},
	"browser_action": {
		"default_icon": "img/icon19.png",
		"default_title": "D.I.C.",
		"default_popup": "pages/popup.html"
	},
	"background": {
		"scripts": ["scripts/jquery.js", "scripts/config.js", "scripts/dic.js", "scripts/background.js"]
	},
	"permissions": [
		"*://*.dreamincode.net/"
	]
}